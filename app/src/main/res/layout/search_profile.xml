<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f4f4f4"
    android:paddingBottom="10dp">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/SP_userpic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="3dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/darkblue"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/SP_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="#fff"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/SP_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblue"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="52dp"
                android:textSize="24sp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/searchprofile_emailicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_email_black_24dp"
                    />
                <TextView
                    android:id="@+id/SP_useremail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/searchprofile_emailicon"
                    android:textColor="@color/darkblue"
                    android:layout_marginStart="2dp"
                    android:textSize="16sp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/searchprofile_phoneicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone_black_24dp"
                    />
                <TextView
                    android:id="@+id/SP_userphonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/searchprofile_phoneicon"
                    android:textColor="@color/darkblue"
                    android:layout_marginStart="2dp"                    android:textSize="16sp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/searchprofile_locationicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_place_black_24dp"
                    />
                <TextView
                    android:id="@+id/SP_userlocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/searchprofile_locationicon"
                    android:textColor="@color/darkblue"
                    android:layout_marginStart="2dp"                    android:textSize="16sp"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>