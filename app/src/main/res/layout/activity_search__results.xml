<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Search_Results"
    android:background="#fff"
    android:focusableInTouchMode="true"
    style="@style/SearchActivity">

    <ImageButton
        android:id="@+id/searchresults_backicon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/back_icon_black"
        android:background="@color/White"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/searchresults_rel"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"/>

    <EditText
        android:id="@+id/searchtext"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/searchresults_backicon"
        android:layout_toStartOf="@id/Spinner"
        android:layout_marginStart="5dp"
        android:layout_above="@id/searchresults_rel"
        android:textColorHighlight="@color/darkblue"
        android:textColorLink="@color/darkblue"
        android:imeOptions="actionDone"
        android:singleLine="true"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/Spinner"
        android:layout_alignParentEnd="true"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:elevation="10dp"
        android:outlineSpotShadowColor="@color/textcolor"
        android:outlineAmbientShadowColor="@color/textcolor"
        android:visibility="visible"
        android:backgroundTint="#000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"/>
    <RelativeLayout
        android:id="@+id/searchresults_rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Spinner"
        android:layout_marginTop="5dp"
        android:elevation="0dp">
        <ProgressBar
            android:id="@+id/searchresult_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:layout_above="@+id/searchresult_progressbar2"
            android:indeterminateTint="@color/indigo"/>
        <ProgressBar
            android:id="@+id/searchresult_progressbar2"
            android:elevation="0dp"
            android:indeterminateTint="@color/indigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:progressBackgroundTint="#00000000"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/search_swiprerefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/searchresult_recyclerview"
                android:layout_below="@+id/Spinner"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>

</RelativeLayout>