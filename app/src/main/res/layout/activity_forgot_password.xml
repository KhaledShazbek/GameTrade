<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ForgotPassword">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:backgroundTint="@color/darkblue">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/forgotpassword_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_icon"
                android:background="@color/darkblue"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/White"
                android:textSize="16sp"
                android:text="Type in your username and we'll send a recovery code to your phone number so you can reset your password"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/forgotpassword_username"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        app:labelText="Username"
        app:panelBackgroundColor="@color/White"
        app:primaryColor="@color/darkblue"
        android:elevation="1dp">
        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/forgotpass_usernameholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"/>
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/forgotpassword_otp"
        android:layout_below="@id/forgotpassword_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:labelText="Recovery Code"
        app:panelBackgroundColor="@color/White"
        app:primaryColor="@color/darkblue"
        android:elevation="1dp"
        android:visibility="gone">
        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/forgotpassword_otpholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:inputType="number"/>
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
    <Button
        android:id="@+id/forgotpassword_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/forgotpassword_otp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/indigo"
        android:text="Send"
        android:textColor="@color/White"/>
    <Button
        android:id="@+id/proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/forgotpassword_otp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/indigo"
        android:text="Proceed"
        android:visibility="gone"
        android:textColor="@color/White"/>


</RelativeLayout>